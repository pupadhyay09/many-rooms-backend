@{
    ViewData["Title"] = "Home Page";
}
<style>
    .cards {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 20px;
        margin: 30px 0;
    }

    .card {
        flex: 1;
        min-width: 250px;
        background: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        text-align: center;
    }

        .card h2 {
            margin: 10px 0;
            font-size: 2em;
            color: #007BFF;
        }

        .card p {
            color: #666;
            margin: 0;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 30px;
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    th {
        background: #007BFF;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .status {
        font-weight: bold;
    }

    .confirmed {
        color: green;
    }

    .pending {
        color: orange;
    }

    .canceled {
        color: red;
    }
</style>
<div class="content-body">
    <div class="container-fluid ">
        <div class="cards">
            <div class="card">
                <h2>128</h2>
                <p>Bookings</p>
            </div>
            <div class="card">
                <h2>17</h2>
                <p>Revenue</p>
            </div>
            <div class="card">
                <h2>9</h2>
                <p>Upcoming bookings</p>
            </div>
        </div>
        <h2>📅 Upcoming Bookings</h2>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Room</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Apr 22, 2025</td>
                    <td>Conference Room A</td>
                    <td class="status confirmed">Confirmed</td>
                </tr>
                <tr>
                    <td>Apr 23, 2025</td>
                    <td>Meeting Room 2B</td>
                    <td class="status pending">Pending</td>
                </tr>
                <tr>
                    <td>Apr 24, 2025</td>
                    <td>Training Hall</td>
                    <td class="status canceled">Canceled</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>
